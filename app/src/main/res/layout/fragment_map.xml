<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Map">

    <!-- TODO: Update blank fragment layout -->
    <fragment
        android:id="@+id/maps"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#F1F1F1"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"/>

    <RelativeLayout
        android:id="@+id/boundedBox"
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_marginTop="-10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="41dp"
                    android:layout_height="44dp"
                    android:src="@drawable/pfp" />

                <TextView
                    android:id="@+id/textBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/myImageView"
                    android:layout_centerVertical="true"
                    android:background="#F1F1F1"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/myProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:progress="50"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-10dp"
                    android:layout_alignEnd="@id/myImageView"
                    android:layout_alignTop="@id/myImageView">
                <ImageView
                    android:id="@+id/levelIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignEnd="@id/myImageView"
                    android:layout_alignTop="@id/myImageView"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_alignEnd="@id/myImageView"
                    />

                </FrameLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/shopLayout"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/shopButton"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="false"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/shop" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myLocationViewBackdrop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="365dp"
        android:elevation="4dp"
        android:alpha="0.6"
        android:background="@drawable/rounded_shape_with_padding">
        <ImageView
            android:id="@+id/myLocationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/my_location"
            android:clickable="true"/>
    </RelativeLayout>
</FrameLayout>
